<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/entete" />
    <!--image créer en entete-->


    <TextView
        android:labelFor="@+id/TV_fraishorsforfais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frais hors forfait"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:textSize="30dp"
        />
    <TextView
        android:labelFor="@+id/TV_libelleFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:text="Libellé"
        android:textSize="20dp"
        android:textColor="#B0F2B6"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/libelleFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="#B0F2B6"
        android:hint="Saisir votre libellé"
        />
    <TextView
        android:labelFor="@+id/TV_montantFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#B0F2B6"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text=" Montant"/>

    <EditText
        android:id="@+id/montantFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="7dp"
        android:textColor="#B0F2B6"
        android:hint="Saisir un montant"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView
        android:labelFor="@+id/TV_dateFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#B0F2B6"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=" Date" />


    <EditText
        android:id="@+id/DateFHF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="format JJ/MM/AAAA"
        android:inputType="date"
        />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="ShowCal"
        android:src="@android:drawable/ic_menu_day"></ImageButton>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ajouterFHF"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Valider"
        android:textColor="#000"
        android:layout_margin="40dp"
        android:backgroundTint="#D3D3D3"
        android:onClick="AjouterFHF"
        />

    </LinearLayout >